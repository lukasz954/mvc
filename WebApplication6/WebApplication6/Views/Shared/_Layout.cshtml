<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Styles/Style.css" rel="stylesheet" />
</head>
<body>
    <header class="header">
       <img class="header-img" src="~/Img/Home/header.jpg" />
    </header>

    <nav class="nav">
        <ul>
            <li class="nav-buton">@Html.ActionLink("Strona główna","Index","Home")</li>
            <li class="nav-buton">@Html.ActionLink("Książki", "Index","Book")</li>
            <li class="nav-buton">@Html.ActionLink("Moje konto", "Index","Login")</li>
        </ul>
    </nav>

    
    <div class="container-body-content">
        @RenderBody()
        <hr />
    </div>
    
    <footer>
          <p>&copy; @DateTime.Now.Year - Księgarnia Łukasz Bartkowiak</p>
    </footer>
    
</body>
</html>